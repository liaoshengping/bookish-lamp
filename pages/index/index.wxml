            <view class="introduction">{{item.trackTitle}}</view>
          </view>
          <view class="count">
            <view class="playcount">
              <!-- <view class="icon-"></view> -->
              126亿
            </view>
            <view class="jicount">{{item.tracks}}集</view>
          </view>
        </view>
      </view>
    </block>
  </view>

    
